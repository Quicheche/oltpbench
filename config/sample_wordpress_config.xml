<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>mysql</dbtype>
    <driver>com.mysql.jdbc.Driver</driver>
    <DBUrl>jdbc:mysql://localhost:3306/wordpress?useSSL=false</DBUrl>
    <username>root</username>
    <password></password>
    <isolation>TRANSACTION_READ_COMMITTED</isolation>
    <uploadCode></uploadCode>
    <uploadUrl></uploadUrl>


    <scalefactor>35</scalefactor>

    <!-- The workload -->
    <terminals>25</terminals>
    <works>
        <work>
            <time>300</time>
            <rate>10000</rate>
            <weights>35,25,25,5,5,5</weights>
        </work>
    </works>

    <transactiontypes>
        <transactiontype>
            <name>GetHomePages</name>
        </transactiontype>
        <transactiontype>
            <name>ReadPostByCategory</name>
        </transactiontype>
        <transactiontype>
            <name>ReadPosts</name>
        </transactiontype>
        <transactiontype>
            <name>AddComments</name>
        </transactiontype>
        <transactiontype>
            <name>EditPosts</name>
        </transactiontype>
        <transactiontype>
            <name>AddNewPost</name>
        </transactiontype>
    </transactiontypes>

</parameters>