<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>mysql</dbtype>
    <driver>com.mysql.jdbc.Driver</driver>
    <DBUrl>jdbc:mysql://localhost:3306/wordpress?useSSL=false</DBUrl>
    <!-- Replace with your local Mysql access info-->
    <username>root</username>
    <password></password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    <uploadCode></uploadCode>
    <uploadUrl></uploadUrl>


    <scalefactor>2</scalefactor>

    <!-- The workload -->
    <terminals>1</terminals>
    <works>
        <work>
            <time>1</time>
            <rate>10000</rate>
            <weights>45, 45, 4, 2, 4</weights>
        </work>
    </works>

    <transactiontypes>
        <transactiontype>
            <name>GetHomePages</name>
        </transactiontype>
        <transactiontype>
            <name>ReadPosts</name>
        </transactiontype>
        <transactiontype>
            <name>AddNewPost</name>
        </transactiontype>
        <transactiontype>
            <name>AddComments</name>
        </transactiontype>
        <transactiontype>
            <name>EditPosts</name>
        </transactiontype>

    </transactiontypes>

</parameters>